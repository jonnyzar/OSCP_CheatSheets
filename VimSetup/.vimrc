set encoding=utf-8
set autoindent

nmap oo o<Esc>k

" set compatibility to vim only
set nocompatible

" set line numbers
set number 

" set tab to 4 spaces
filetype plugin indent on
set tabstop=4
set expandtab
set ts=4 sw=4
set softtabstop=4
set shiftwidth=4
set autoindent
set backspace=indent,eol,start


" turn on highlighting

syntax on

" break line

set textwidth=120

nnoremap Y y$
nnoremap O o<Esc>
